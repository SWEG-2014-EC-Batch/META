#include <iostream>
using namespace std;
void readArray(int arr[], int n){
    cout << "Enter the elements of the array: ";
    for (int i=0 ; i<n; i++){
        cin >> arr[i];
    }
}
void FirstandLast(int arr[], int n){
    cout << "First and last elements of the array: "<<endl;
    cout <<"First: "<<arr[0]<<"\t Last: "<<arr[n-1]<<endl;
    cout << "The sum of the two elements: "<< arr[0]+arr[n-1]<<endl; 
}

int main(){
    int n, arr[n];
    cout << "Enter the number of elements: \n";
    cin>> n;
  readArray(arr, n);
  FirstandLast(arr, n);
}

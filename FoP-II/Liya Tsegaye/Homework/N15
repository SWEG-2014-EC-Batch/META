#include <iostream>
#include <cassert>
using namespace std;

void scale(double factor, double &a, double &b) {
  cout << "Before scaling: " << endl;
  cout << "factor = " << factor << endl;
  cout << "a = " << a << endl;
  cout << "b = " << b << endl;

 assert(factor != 0);

  a *= factor;
  b *= factor;

  cout << "After scaling: " << endl;
  cout << "factor = " << factor << endl;
  cout << "a = " << a <<
  cout << "b = " << b << endl;
}

int main() {
double x, y, z;

cout << "Enter three doubles: ";
cin >> x >> y >> z;

scale(z, x, y);

return 0;
}
